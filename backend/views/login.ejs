<div class="form-login-container">

  <% if (message.length > 0) { %>
    <div class="alert alert-danger text-center"><%= message %></div>
  <% } %>

  <form action="/login" method="post" class="form-login">
    <p class="h5 text-center mb-4">Log in</p>

    <div class="md-form">
      <i class="fa fa-user prefix grey-text"></i>
      <input type="text" id="orangeForm-email" class="form-control" name="email" >
        <label for="orangeForm-email">Username</label>
      <div class="col-md-6"></div>
    </div>

    <div class="md-form">
      <i class="fa fa-lock prefix grey-text"></i>
      <input type="password" id="orangeForm-pass" class="form-control" name="password" autocomplete="off">
      <label for="orangeForm-pass">Password</label>
    </div>
    <br>
    <div class="md-form actions-container text-center">
      <button class = "btn btn-primary" type="submit">Login<i class="fa fa-paper-plane-o ml-1"></i></button>
    </div>
  </form>
  <hr>
  <p class="text-center">Don't have an account? <a href="/register">Sign up</a></p>

</div>
