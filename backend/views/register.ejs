<div class="form-login-container">

  <form action="/register" method="post" class="form-signup">
    <p class="h5 text-center mb-4">Sign up</p>

    <div class="md-form">
      <i class="fa fa-user prefix grey-text"></i>
      <input type="text" id="orangeForm-email" class="form-control" name="email">
        <label for="orangeForm-email">Email Address</label>
      <div class="col-md-6"></div>
    </div>

    <div class="md-form">
      <i class="fa fa-lock prefix grey-text"></i>
      <input type="password" id="orangeForm-pass" class="form-control" name="password">
      <label for="orangeForm-pass">Password</label>
    </div>
    <br>
    <div class="md-form actions-container text-center">
      <button class = "btn btn-primary" type="submit">Create Account<i class="fa fa-paper-plane-o ml-1"></i></button>
    </div>

  </form>
  <hr>
  <p class="text-center">Already have an account? <a href="/login">Log in</a></p>

</div>
